{
  "extends": "@repo/tsconfig/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@repo/ui": [
        "../../packages/ui/src"
      ],
      "@repo/utils": [
        "../../packages/utils/src"
      ],
      "@repo/auth": [
        "../../packages/auth/src"
      ],
      "@repo/auth/verify-auth": [
        "../../packages/auth/src/verify-auth"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}